<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>my-installer</artifactId>
	<packaging>pom</packaging>

	<name>RIV4-installer</name>
	<url>http://maven.apache.org</url>

	<pluginRepositories>
		<pluginRepository>
			<id>codehaus-snapshots</id>
			<name>Codehaus Snapshot Repository</name>
			<url>https://nexus.codehaus.org/content/repositories/snapshots/</url>
		</pluginRepository>
	</pluginRepositories>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<izpack.dir>${basedir}/src/izpack</izpack.dir>
		<izpack.staging>${project.build.directory}/staging</izpack.staging>
		<cd>${project.build.directory}/CD</cd>
		<maven.compiler.source>1.6</maven.compiler.source>
		<maven.compiler.target>1.6</maven.compiler.target>
		<app.version>${project.version}</app.version>
		<izpack.version>5.0.8</izpack.version>
	</properties>
	<dependencies>
	</dependencies>
	<build>
		<finalName>myapp-${project.version}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>prepare-cd</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${cd}</outputDirectory>
							<resources>
								<resource>
									<directory>${izpack.dir}/CD</directory>
									<filtering>false</filtering>
									<includes>
										<include>**/*</include>
									</includes>
									<excludes>
										<exclude>**/.gitignore</exclude>
									</excludes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.izpack</groupId>
				<artifactId>izpack-maven-plugin</artifactId>
				<version>${izpack.version}</version>
				<executions>
					<execution>
						<phase>compile</phase>
						<goals>
							<goal>izpack</goal>
						</goals>
						<configuration>
							<!-- base for relative paths in izpack descriptor -->
							<baseDir>${izpack.dir}</baseDir>
							<installFile>${izpack.dir}/simple-install.xml</installFile>
							<outputDirectory>${cd}/lib</outputDirectory>
							<finalName>riv</finalName>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>org.codehaus.izpack</groupId>
						<artifactId>izpack-panel</artifactId>
						<version>${izpack.version}</version>
					</dependency>
				</dependencies>
			</plugin>

			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2-beta-5</version>
				<configuration>
					<descriptors>
						<descriptor>src/main/assembly/zip-admin.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id> <!-- this is used for inheritance merges -->
						<phase>package</phase> <!-- append to the packaging phase. -->
						<goals>
							<goal>single</goal> <!-- goals == mojos -->
						</goals>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>
	<parent>
		<groupId>org.fao.riv</groupId>
		<artifactId>RIV4</artifactId>
		<version>4.2.0-SNAPSHOT</version>
		<relativePath>../RIV4/pom.xml</relativePath>
	</parent>
</project>
