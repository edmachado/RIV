<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>osx-admin</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<baseDirectory>CD</baseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/CD</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>**/.gitignore</exclude>
				<exclude>riv.jar</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${izpack.dir}/resources/osx</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>Install.app/**/*</include>
			</includes>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${project.build.directory}/CD/riv.jar</source>
			<outputDirectory>lib</outputDirectory>
		</file>
		<file>
			<source>${izpack.dir}/resources/av.riv</source>
			<outputDirectory>lib</outputDirectory>
			<destName>av.riv</destName>
		</file>
		<file>
			<source>${izpack.dir}/jre/jre1.8.tbz</source>
			<outputDirectory>jre</outputDirectory>
			<destName>jre1.8.tbz</destName>
		</file>
	</files>
</assembly>