<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>user</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<baseDirectory>CD</baseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/CD</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>**/.gitignore</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${izpack.dir}/jre/win32</directory>
			<outputDirectory>jre</outputDirectory>
			<excludes>
				<exclude>**/.gitignore</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${izpack.dir}/resources/osx</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>RuralInvest.app/**/*</include>
			</includes>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${izpack.dir}/jre/jre-8u66-windows-i586.exe</source>
			<outputDirectory>jre</outputDirectory>
			<destName>jre.exe</destName>
		</file>
	</files>
</assembly>